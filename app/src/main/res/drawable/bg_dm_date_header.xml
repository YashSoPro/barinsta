<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="?attr/dmDateHeaderBgColor" />
    <corners android:radius="16dp" />
    
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />

    <stroke
        android:width="1dp"
        android:color="@color/grey_600" /> <!-- Optional: adds a stroke for definition -->

    <!-- Optional shadow effect -->
    <item android:top="2dp" android:left="2dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_800" /> <!-- Shadow color -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</shape>
