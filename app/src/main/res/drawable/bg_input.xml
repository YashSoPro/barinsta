<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:startColor="@color/grey_400"
        android:endColor="@color/grey_600"
        android:angle="90" /> <!-- Gradient from top to bottom -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
    <corners android:radius="24dp" />
    <stroke
        android:width="1dp"
        android:color="@color/grey_800" /> <!-- Adding a border -->
</shape>
